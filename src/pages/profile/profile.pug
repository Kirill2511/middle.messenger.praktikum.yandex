extends ../../main
include ../../components/header/header

block nav
    +header("profile")

block content
    section.profile-page
        a(href='../chat/chat.pug' title='Назад на страницу чата').profile-back
            img(src='../../images/back.svg', alt='вернуться назад').profile__img
        div.profile-content
            div.profile__avatar
                span(title='Аватар').profile__eclipse
                    img(src='../../images/Union.svg' title='Аватар').profile__img.profile__img_center
                p.profile__name Иван
            div.profile__form
                label.profile__label(for='email') Почта
                    input.profile__input(
                        type='email'
                        name='email'
                        id='email'
                        value='pochta@yandex.ru'
                        disabled
                    )
                label.profile__label(for='login') Логин
                    input.profile__input(
                        type='text'
                        name='login'
                        id='login'
                        value='ivanivanov'
                        disabled
                    )
                label.profile__label(for='firstName') Имя
                    input.profile__input(
                        type='text'
                        name='first_name'
                        id='firstName'
                        value='Иван'
                        disabled
                    )
                label.profile__label(for='secondName') Фамилия
                    input.profile__input(
                        type='text'
                        name='second_name'
                        id='secondName'
                        value='Иванов'
                        disabled
                    )
                label.profile__label(for='display_name') Имя в чате
                    input.profile__input(
                        type='text'
                        name='display_name'
                        id='display_name'
                        value='Иван'
                        disabled
                    )
                label.profile__label(for='tel') Телефон
                    input.profile__input(
                        type='tel'
                        name='tel'
                        id='tel'
                        value='+7 (909) 967 30 30'
                        disabled
                    )

                div.profile__bottons
                    button.profile__botton Изменить данные
                    button.profile__botton Изменить пароль
                    button.profile__botton Выйти


append scripts
    script(src="./profile.js" type='module')
